<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
<div class="container-fluid">
    <div class="row group-1 collapse show" id="card-1">
        <div class="col">
            <div class="card m-2">
                <div class="card-header">Select a Device Type</div>
                <div class="card-body">
                    <div class="row">
                        <%  types.forEach( type => { %>
                                <div class="col-3 mt-2">
                                    <button data-bs-toggle="collapse" data-bs-target=".group-1" class="btn btn-outline-danger btn-type d-block mx-auto w-100 h-100"><%= type.replace("\n", "") %></a>
                                </div>
                        <% }) %>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row group-1 group-2 collapse" id="card-2">
        <div class="col">
            <div class="card">
                <div class="card-header">Select a Device Manufacturer</div>
                <div class="row card-body card-2-body">
                </div>
            </div>
        </div>
    </div>
    <div class="row group-2 group-3 collapse" id="card-3">
        <div class="col">
            <div class="card">
                <div class="card-header">Select a Device Model</div>
                <div class="card-body">
                    <button data-bs-toggle="collapse" data-bs-target=".group-3" class="btn btn-success">Next</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row group-3 group-4 collapse" id="card-4">
        <div class="col">
            <div class="card">
                <div class="card-header">Pick a thing</div>
                <div class="card-body">
                    <button data-bs-toggle="collapse" data-bs-target=".group-4" class="btn btn-success">Next</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row group-4 group-5 collapse" id="card-5">
        <div class="col">
            <div class="card">
                <div class="card-header">Pick a thing</div>
                <div class="card-body">
                    <button data-bs-toggle="collapse" data-bs-target=".group-5" class="btn btn-success">Next</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row group-5 collapse" id="card-6">
        <div class="col">
            <div class="card">
                <div class="card-header">Pick a thing</div>
                <div class="card-body">
                    <p>DONE!</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js" integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script>
<script>
    $('.btn-type').click( e => {
        fetch(`/makes/${e.target.innerText}`).then(res=>res.json()).then(makes=>{
            makes.forEach(make=>{
                $('.card-2-body').append(`
                    <div class="col-3 mt-2">
                        <button data-bs-toggle="collapse" data-bs-target=".group-2" class="btn btn-outline-danger btn-type d-block mx-auto w-100 h-100">${make.replace("\n", "")}</a>
                    </div>
                `)
            })
        })
    })

</script>